<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <HTTPProxyConnection>
    <BasePath>/feature-tester-v1</BasePath>
  </HTTPProxyConnection>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>JS-SetTestIds</Name>
        <Condition>request.header.x-upstream-id != null</Condition>
      </Step>
      <Step>
        <Name>SC-GetTestCases</Name>
        <Condition>request.header.x-upstream-id != null</Condition>
      </Step>
      <Step>
        <Name>JS-SetTestData</Name>
        <Condition>request.header.x-upstream-id != null</Condition>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>JS-RunTest</Name>
        <Condition>upstream.testCase != null</Condition>
      </Step>
      <Step>
        <Name>SC-SaveResults</Name>
        <Condition>upstream.testResults != null</Condition>
      </Step>
    </Response>
  </PostFlow>
  <DefaultFaultRule name="default-fault">
    <Step>
      <Name>JS-RunTest</Name>
      <Condition>upstream.testCase != null</Condition>
    </Step>
    <Step>
      <Name>SC-SaveResults</Name>
      <Condition>upstream.testResults != null</Condition>
    </Step>
  </DefaultFaultRule>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
